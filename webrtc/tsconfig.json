{
  "compilerOptions": {
    // specify js language version
    "target": "ES2016",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    // stop js from compiling if there is ts error
    "noEmitOnError": true,
    "jsx": "react-jsx",
    // where tsx should check
    "rootDir": "./src",
    // where tsx should compile js
    "outDir": "./src/js"
  },
  // include indicates which repo to allow for ts checks
  "include": [
    "src"
  ]
}
